<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="drop.drop.CollectedDrops">

    <RelativeLayout
        android:id="@+id/collected_top_bar"
        style="@style/TopBar"
        android:background="@color/blue_accent">

        <ImageButton
            android:id="@+id/collected_back_arrow"
            android:src="@drawable/back_arrow"
            style="@style/TobBarImageButtons"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="backPressed"/>

        <ImageView
            android:id="@+id/collected_logo"
            style="@style/TobBarLogo"
            android:src="@drawable/drop_logo" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/collected_top_bar">
    </ListView>

</RelativeLayout>
